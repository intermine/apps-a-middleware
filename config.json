{
    "service": {
        "port": 1119
    },
    "widgets": {
        "publications-displayer": {
            "author": "Radek",
            "title": "Publications for Gene",
            "description": "Shows a list of publications for a specific gene",
            "version": "0.2.0",
            "dependencies": [
                {
                    "name": "jQuery",
                    "path": "http://127.0.0.1:1119/js/jquery-min.js",
                    "type": "js",
                    "wait": true
                },
                {
                    "name": "_",
                    "path": "http://127.0.0.1:1119/js/underscore-min.js",
                    "type": "js",
                    "wait": true
                },
                {
                    "name": "Backbone",
                    "path": "http://127.0.0.1:1119/js/backbone-min.js",
                    "type": "js"
                },
                {
                    "path": "http://127.0.0.1:1119/js/imjs.js",
                    "type": "js"
                }
            ],
            "config": {
                "mine": "http://beta.flymine.org/beta",
                "pathQueries": {
                    "pubsForGene": {
                        "select": [
                            "publications.title",
                            "publications.year",
                            "publications.journal",
                            "publications.pubMedId",
                            "publications.authors.name"
                        ],
                        "from": "Gene",
                        "joins": [
                            "publications.authors"
                        ]
                    }
                }
            }
        },
        "spell-histogram": {
            "author": "Radek",
            "title": "SPELL YeastMine Histogram",
            "description": "Shows a SPELL Expression Summary for YeastMine gene experiments data",
            "version": "0.0.1",
            "dependencies": [
                {
                    "name": "jQuery",
                    "path": "http://127.0.0.1:1119/js/jquery-min.js",
                    "type": "js",
                    "wait": true
                },
                {
                    "name": "_",
                    "path": "http://127.0.0.1:1119/js/underscore-min.js",
                    "type": "js",
                    "wait": true
                },
                {
                    "name": "Backbone",
                    "path": "http://127.0.0.1:1119/js/backbone-min.js",
                    "type": "js"
                },
                {
                    "name": "google",
                    "path": "https://www.google.com/jsapi",
                    "type": "js"
                }
            ]
        }
    }
}